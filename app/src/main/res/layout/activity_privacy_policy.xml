<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">

    <ImageView
        android:id="@+id/btnAccept"
        android:layout_width="250dp"
        android:layout_height="@dimen/_50sdp"
        android:textSize="@dimen/_12sdp"
        android:src="@drawable/btnallow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="@dimen/_40sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textStyle="bold"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@id/btnAccept"
        app:layout_constraintEnd_toEndOf="@id/btnAccept"
        app:layout_constraintTop_toTopOf="@id/btnAccept"
        app:layout_constraintBottom_toBottomOf="@id/btnAccept"/>


</androidx.constraintlayout.widget.ConstraintLayout>