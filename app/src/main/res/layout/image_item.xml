<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgImage"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/txtFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatsapp Imag.."
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@id/imgImage"
        app:layout_constraintTop_toBottomOf="@id/imgImage"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="342 Media"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintStart_toStartOf="@id/txtFolder"
        app:layout_constraintTop_toBottomOf="@id/txtFolder"
        android:textColor="#7A7979"
        android:textSize="@dimen/_8sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>